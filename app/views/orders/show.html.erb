<h1>Your Order</h1>

<table>
  <tr>
    <th>Customer</th>
    <td><%= @order.customer_id %></td>
  </tr>
  <tr>
    <th>Status</th>
    <td><%= @order.status %></td>
  </tr>
  <tr>
    <th>Number of Items</th>
    <td><%= @order.order_items.count %></td>
  </tr>
  <tr>
    <th>Items</th>
    <th>Title</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Subtotal</th>
    <th></th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= image_tag "/images/products/#{item.product.image_url}" %></td>
      <td><%= item.product.title %></td>
      <td><%= item.quantity %></td>
      <td><%= print_price item.product.price %></td>
      <td><%= print_price item.subtotal %></td>
      <td><%= link_to "Remove", order_item_path(item), 
        :confirm => "Are you sure?", :method => :delete %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td>Total:</td>
    <td><%= print_price @order.total %></td>
  </tr>
</table>
<p>
<%= link_to "Empty Cart", order_path(@order),
  :confirm => "Are you sure?", :method => :delete %>
</p>
